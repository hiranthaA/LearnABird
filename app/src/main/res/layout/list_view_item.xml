<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/imgView_list_item_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="@string/lbl_bird_img_view"
        android:drawingCacheQuality="low"
        android:padding="5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_lst_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_toStartOf="@+id/btn_main_list_edit"
        android:layout_toLeftOf="@+id/btn_main_list_edit"
        android:layout_toEndOf="@+id/imgView_list_item_img"
        android:layout_toRightOf="@+id/imgView_list_item_img"
        android:text="TextView"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/btn_main_list_delete"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:backgroundTint="@color/transparent"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ImageButton
        android:id="@+id/btn_main_list_edit"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_toStartOf="@+id/btn_main_list_delete"
        android:layout_toLeftOf="@+id/btn_main_list_delete"
        android:backgroundTint="@color/transparent"
        android:scaleX="0.9"
        android:scaleY="0.9"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</RelativeLayout>